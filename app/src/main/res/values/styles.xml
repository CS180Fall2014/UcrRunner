<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>


    <!-- Text input Default style -->
    <style name="DefaultTextInput">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:paddingLeft">@dimen/edittext_padding_left</item>
        <item name="android:background">@drawable/text_input_background</item>

    </style>

    <!-- TextView for upper map stats -->
    <style name="TextViewMapStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/activity_horizontal_margin</item>
        <item name="android:fontFamily">serif-thin</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
